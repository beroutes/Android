<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout android:onClick="cargarDetalles"
            android:id="@+id/item1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/item_image"
                android:src="@drawable/ic_cappadocia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/description_image_list"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capadocia_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/item_puntuation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/item_image"
                    android:numStars="@integer/puntuation_number_stars"
                    android:rating="3"
                    android:layout_marginTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    tools:ignore="NotSibling"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/item_image" />

                <TextView
                    android:id="@+id/item_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/item_puntuation"
                    android:layout_marginVertical="8dp"
                    android:textSize="12sp"
                    android:text="@string/capadocia_days"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/item_short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/item_puntuation"
                    android:maxLines="3"
                    android:text="@string/capadocia_description"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="40dp"
                    android:layout_toStartOf="@id/item_puntuation" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_days"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/capadocia_price"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:onClick="cargarDetalles1"
            android:id="@+id/item2"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="30dp">

            <ImageView
                android:id="@+id/item_image1"
                android:src="@drawable/ic_san_francisco"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/description_image_list"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sanfrancisco_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/item_puntuation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/item_image1"
                    android:numStars="@integer/puntuation_number_stars"
                    android:rating="4"
                    android:layout_marginTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    tools:ignore="NotSibling"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/item_image" />

                <TextView
                    android:id="@+id/item_days1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/item_puntuation1"
                    android:layout_marginVertical="8dp"
                    android:textSize="12sp"
                    android:text="@string/sanfrancisco_days"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/item_short_description1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title1"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/item_puntuation1"
                    android:maxLines="3"
                    android:text="@string/sanfrancisco_description"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="40dp"
                    android:layout_toStartOf="@id/item_puntuation1" />

                <TextView
                    android:id="@+id/item_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_days1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/sanfrancisco_price"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:onClick="cargarDetalles2"
            android:id="@+id/item3"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image2"
                android:src="@drawable/ic_nueva_york"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="@string/description_image_list"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nuevayork_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/item_puntuation2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/item_image2"
                    android:numStars="@integer/puntuation_number_stars"
                    android:rating="5"
                    android:layout_marginTop="10dp"
                    style="?android:attr/ratingBarStyleSmall"
                    tools:ignore="NotSibling"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/item_image" />

                <TextView
                    android:id="@+id/item_days2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/item_puntuation2"
                    android:layout_marginVertical="8dp"
                    android:textSize="12sp"
                    android:text="@string/nuevayork_days"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/item_short_description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_title2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/item_puntuation2"
                    android:maxLines="3"
                    android:text="@string/nuevayork_description"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="40dp"
                    android:layout_toStartOf="@id/item_puntuation2" />

                <TextView
                    android:id="@+id/item_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_days2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/nuevayork_price"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
